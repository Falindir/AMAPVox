<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>build</actionName>
            <preAction>build-with-dependencies</preAction>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>install</goal>
                
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-deploy_to_local_repository</actionName>
            <displayName>deploy_to_local_repository</displayName>
            <goals>
                <goal>deploy</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-cleanAndDeploy</actionName>
            <displayName>cleanAndDeploy</displayName>
            <goals>
                <goal>clean</goal>
                <goal>deploy</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-deploy</actionName>
            <displayName>deploy</displayName>
            <goals>
                <goal>deploy</goal>
            </goals>
        </action>
        <action>
            <actionName>CUSTOM-nonRecursiveCleanAndDeploy</actionName>
            <displayName>nonRecursiveCleanAndDeploy</displayName>
            <recursive>false</recursive>
            <goals>
                <goal>clean</goal>
                <goal>deploy</goal>
                
            </goals>
        </action>
        <action>
            <actionName>debug.single.main</actionName>
            <packagings>
                <packaging>*</packaging>
            </packagings>
            <goals>
                <goal>process-classes</goal>
                <goal>org.codehaus.mojo:exec-maven-plugin:1.4.0:exec</goal>
            </goals>
            <properties>
                <exec.args>-Xdebug -Xmx10g -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath ${packageClassName}</exec.args>
                <exec.executable>java</exec.executable>
                <exec.classpathScope>${classPathScope}</exec.classpathScope>
                <jpda.listen>true</jpda.listen>
            </properties>
        </action>
    </actions>
